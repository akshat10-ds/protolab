{
  "name": "@protolab/design-system",
  "version": "1.0.0",
  "private": false,
  "type": "module",
  "description": "Design system starter for rapid prototyping with 54 production-ready components",
  "homepage": "https://protolab-ink.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/akshat10-ds/protolab.git"
  },
  "author": "Akshat Mishra",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./tokens.css": "./dist/tokens.css",
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "*.css"
  ],
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "immer": "^11.0.1",
    "lucide-react": "^0.487.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "fs-extra": "^11.3.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "tsup": "^8.5.1",
    "typescript": "^5.3.3",
    "vite": "6.3.5"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "dist": false,
    "scripts": false
  },
  "scripts": {
    "dev": "vite",
    "build:lib": "tsup",
    "build:css": "node scripts/copy-css.js",
    "build": "npm run build:lib && npm run build:css",
    "build:app": "npm run validate:all && npm run lint && npm run stylelint && vite build",
    "preview": "vite preview",
    "lint": "eslint src/design-system --ext ts,tsx",
    "lint:fix": "eslint src/design-system --ext ts,tsx --fix",
    "stylelint": "stylelint 'src/**/*.css'",
    "stylelint:fix": "stylelint 'src/**/*.css' --fix",
    "typecheck": "tsc --noEmit",
    "validate": "node scripts/validate-design-system.js",
    "validate:icons": "node scripts/validate-icon-names.js",
    "validate:shadows": "node scripts/validate-no-shadow-components.js",
    "validate:root": "node scripts/validate-single-root.js",
    "validate:vars": "node scripts/validate-css-var-overrides.js",
    "validate:semantic": "node scripts/validate-semantic-tokens.js",
    "validate:calc": "node scripts/validate-calc-patterns.js",
    "validate:forms": "node scripts/validate-form-patterns.js",
    "validate:typography": "node scripts/validate-typography-tokens.js",
    "validate:styles": "node scripts/validate-component-styles.js",
    "validate:spelling": "node scripts/validate-docusign-spelling.js",
    "validate:all": "npm run validate && npm run validate:icons && npm run validate:shadows && npm run validate:root && npm run validate:vars && npm run validate:semantic && npm run validate:calc && npm run validate:forms && npm run validate:typography && npm run validate:styles && npm run validate:spelling",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,md}\"",
    "prepare": "husky"
  }
}
